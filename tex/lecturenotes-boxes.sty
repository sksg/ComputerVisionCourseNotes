\def\thereomfont{\normalfont\large\itshape}

\newmdenv[
  topline=false,
  bottomline=false,
  % rightline=false,
  skipabove=\topsep,
  skipbelow=\topsep,
  leftmargin=-10pt,
  rightmargin=-10pt,
