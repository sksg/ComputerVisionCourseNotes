\def\thereomtitlefont{\normalfont\large\itshape}
\NewDocumentCommand\NewRuledBoxTheorem{mo}{
    \newcounter{ln@#1@cnt}[section]
    \RenewExpandableDocumentCommand\theln@#1@cnt{}{\thesection.\arabic{ln@#1@cnt}}
    \NewExpandableDocumentCommand\the#1{}{\theln@#1@cnt}
    \letcolor{#1color}{black}
    \NewDocumentEnvironment{#1}{o}{
        \begin{ruledbox}[linecolor=#1color]%
            \refstepcounter{ln@#1@cnt}%
            \noindent{\thereomtitlefont\color{#1color}%
            \IfValueTF{#2}%
              {#2}%
              {\MakeUppercase #1}
            \IfValueTF{##1}%
              {:~##1\medskip\par\noindent}%
              {.~~}
        \ignorespaces}%
    }{%
        \ifhmode\unskip\fi%
        \end{ruledbox}%
    }
}

